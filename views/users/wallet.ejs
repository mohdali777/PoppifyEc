<%- include('../partials/user/header') %>
<%- include('../partials/user/navbar') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<style>

.wallet {
    width: 1150px;
    margin: 10px 40px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #f9f9f9;
    font-family: Arial, sans-serif;
}

/* Wallet header for MasterCard */
.wallet-header {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30px;
}

/* MasterCard design with fixed width and height */
.card-wallet {
    width: 393px;
    height: 230px;
    background: linear-gradient(135deg, #2d30a9, #5371bc);
    border-radius: 15px;
    color: white;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Card Header with MasterCard logo and Add Money button */
.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.card-logo {
    width: 50px;
    height: 40px;
}

.add-money button {
    background-color: #6423d5;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    border-radius: 5px;
}

.add-money button:hover {
    background-color: #e67e22;
}

/* Card Information */
.card-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.card-number {
    font-size: 13px;
    font-weight: medium;
    letter-spacing: 2px;
    margin-bottom: 10px;
}

.card-balance {
    font-size: 22px;
    font-weight: bold;
    margin-bottom: 10px;
}

.card-expiry {
    font-size: 12px;
}

/* Wallet body for transaction history */
.wallet-body {
    font-size: 16px;
    color: #333;
}

.wallet-body h3 {
    font-size: 24px;
    margin-bottom: 20px;
}

.transaction-header {
    display: grid;
    grid-template-columns: 1fr 2fr 3fr 1fr;
    padding: 10px;
    background-color: #f4f4f4;
    font-weight: bold;
    border-bottom: 2px solid #ddd;
}

.transaction-item {
    display: grid;
    grid-template-columns: 1fr 2fr 3fr 1fr;
    padding: 10px;
    border-bottom: 1px solid #ddd;
    font-size: smaller;
}

.transaction-item div {
    padding: 5px;
}

.transaction-id, .transaction-date, .transaction-description, .transaction-amount {
    text-align: center;
}

.transaction-amount {
    text-align: right;
}

.transaction-list {
    margin-top: 20px;
  
}

.no-transactions {
    padding: 20px;
    text-align: center;
    font-size: 18px;
    color: #666;
    background-color: #f4f4f4;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-top: 20px;
}
.transaction-amount.positive {
    color: #27ae60; /* Green for positive */
}

.transaction-amount.negative {
    color: #e74c3c; /* Red for negative */
}

.wallet-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 500px;
            text-align: center;
            height: 400px;
            position: fixed;
            top: 100px;
            left: 500px;

        }

        .wallet-container h2 {
            margin: 0 0 20px;
            color: #333;
        }

        .input-group-addmoney {
            margin-bottom: 20px;
            text-align: left;
            
        }

        .input-group-addmoney label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .input-group-addmoney input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .add-money-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 100px;
            width: 400px;
            
        }

        .add-money-btn:hover {
            background-color: #0056b3;
        }

        .success-message {
            margin-top: 15px;
            color: green;
            font-weight: bold;
        }
        #addMoneyForm{
            margin-left: 50px;
            margin-top: 50px;
        }

</style>
<div class="container-sm">
  <%- include('../partials/user/sidebaruser') %>
 
  <div class="wallet">
    <!-- Wallet Header with MasterCard Design -->
    <div class="wallet-header">
      <div class="card-wallet">
        <!-- Card content -->
        <div class="card-header">
          <img src="../images/mastercard_logo.png" alt="MasterCard Logo" class="card-logo">
          <div class="add-money">
            <button onclick="addmoney()">Add Money</button>
          </div>
        </div>
        <div class="card-info">
          <div class="card-balance"><%= wallet.balance.toFixed(2) %></div>
          <div class="card-number"><%= wallet.cardNumber %></div>
          <div class="card-expiry">Expiry: <%= wallet.cardExpiry %></div>
        </div>
      </div>
    </div>

    <div class="wallet-container" style="display: none;" id="addmoneyContainer">
        <span id="closeModal" onclick="close()" style="color:#aaa; position:absolute; top:10px; right:15px; font-size:24px; cursor:pointer;">&times;</span>
        <h2>Add Money to Wallet</h2>
        <form id="addMoneyForm">
            <div class="input-group-addmoney">
                <label for="amount">Enter Amount</label>
                <input type="number" id="amount" name="amount" placeholder="Enter amount" required>
            </div>
            <button onclick="addmoneyToWallet(event)"  class="add-money-btn">Add Money</button>
        </form>
        <p class="success-message" id="successMessage" style="display: none;">Money added successfully!</p>
    </div>
  
    <!-- Wallet Body for Transaction History -->
    <div class="wallet-body">
        <h3>Transaction History</h3>
        <div class="transaction-list">
            <% if (wallet.transactions.length === 0) { %>
                <div class="no-transactions">
                    <p>No transaction history available</p>
                </div>
            <% } else { %>
                <!-- Transaction Table -->
                <table class="table table-striped table-bordered" >
                    <thead >
                        <tr>
                            <th scope="col" style="width: 30%;">Transaction ID</th>
                            <th scope="col" style="width: 20%;">Date</th>
                            <th scope="col" style="width: 35%;">Description</th>
                            <th scope="col" style="width: 15%;">Amount</th>
                        </tr>
                    </thead>
                    <tbody id="transactionTableBody">

                    </tbody>
                </table>
                <div class="pagination">
                    <button id="prevPage" onclick="changePage(-1)" class="btn btn-primary">
                        Previous
                    </button>
                        <span id="pageInfo"></span>
                <button id="nextPage" onclick="changePage(1)" class="btn btn-primary">Next</button>
            </div>
            <% } %>
        </div>
    </div>
    
    
  </div>

</div>
</div>
<script src="/js/wallet.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<%- include('../partials/user/footer') %>