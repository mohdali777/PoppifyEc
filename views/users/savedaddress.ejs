<%- include('../partials/user/header') %>
<%- include('../partials/user/navbar') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<style>

    .container-savedaddress{
      max-width: 800px;
      margin: 50px 70px;
      padding: 20px;
      border-radius: 8px;
    
     
    }

    .header {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .add-address-btn {
      display: inline-block;
      margin-bottom: 20px;
      font-size: 1.5rem;
      font-weight: bold;
      color: #007bff;
      cursor: pointer;
      text-decoration: none;
    }

    .address-card {
      display: flex;
      justify-content: space-between;
      width: 900px;
      align-items: center;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 15px;
      background-color: #fff;
    }

    .address-details {
      flex-grow: 1;
    }

    .address-tag {
      display: inline-block;
      font-size: 0.8rem;
      font-weight: bold;
      color: #fff;
      background-color: #007bff;
      padding: 5px 10px;
      border-radius: 5px;
      margin-bottom: 10px;
    }

    .actions {
      display: flex;
      gap: 10px;
    }

    .action-btn {
      border: none;
      background: none;
      cursor: pointer;
      font-size: 1.2rem;
      color: #555;
    }

    .action-btn:hover {
      color: #000;
    }

    .add-address-btn:hover {
      text-decoration: underline;
    }
</style>
<div class="container-sm">
  <%- include('../partials/user/sidebaruser') %>
 
  <div class="container-savedaddress">
    <div class="header">Manage Addresses</div>
    <a href="/add-address" class="add-address-btn">+ Add a New Address</a>
    <% if (address && address.length > 0) { %>
      <% address.forEach(address => { %>
        <div class="address-card">
          <div class="address-details">
            <div class="address-tag">HOME</div>
            <strong><%= address.name %></strong> <br>
            Phone: <strong><%= address.phone %></strong> <br>
            <%= address.companyname %>, <%= address.streetaddress %> <%= address.appartment %>, <%= address.city %>, <%= address.email %>- <strong>670511</strong>
          </div>
          <div class="actions">
            <button onclick="editaddress('<%= address._id %>')" class="action-btn" title="Edit">&#9998;</button>
            <button onclick="deleteaddress('<%= address._id %>')" class="action-btn" title="Delete">&#128465;</button>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No addresses found.</p>
    <% } %>
    
  </div>


</div>
</div>
<script src="/js/saveAddress.js"></script>

<%- include('../partials/user/footer') %>